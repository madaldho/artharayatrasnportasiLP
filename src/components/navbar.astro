---
import { Image } from "astro:assets";

import logo from "../assets/logo-artha-raya.webp";
---

<nav class="bg-white border-gray-200 z-50">
  <div
    class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto p-4">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image
        src={logo}
        alt="Logo Artha Raya Trasnfortasi"
        class="md:w-48 w-24"
        loading="eager"
      />
    </a>

    <div class="flex-1 text-center"></div>

    <!-- Right Side: Button with Modern Styling -->
    <div
      class="flex items-center md:order-2 space-x-1 md:space-x-2 rtl:space-x-reverse">
      <a
        href="https://wa.me/628113393008"
        class="text-white bg-gradient-to-r from-blue-500 to-blue-400 hover:from-blue-300 hover:to-blue-500 focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 shadow-lg hover:shadow-xl transition-all duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-offset-2">
        Booking Sekarang
      </a>
    </div>
  </div>
</nav>
